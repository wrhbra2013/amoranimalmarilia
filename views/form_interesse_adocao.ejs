<%- include('partials/header') %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-heart"></i> Cadastro de Interesse em Adoção</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Preencha suas preferências para que possamos encontrar o pet ideal para você!</p>
                    
                    <form action="/adocao/interessados/form" method="POST">
                        <div class="mb-3">
                            <label for="nome" class="form-label">Seu Nome Completo</label>
                            <input type="text" class="form-control" id="nome" name="nome" required>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="contato" class="form-label">Telefone / Celular</label>
                                <input type="text" class="form-control" id="contato" name="contato" required>
                            </div>
                            <div class="col-md-6">
                                <label for="whatsapp" class="form-label">WhatsApp (Opcional)</label>
                                <input type="text" class="form-control" id="whatsapp" name="whatsapp">
                            </div>
                        </div>

                        <hr>
                        <h5 class="mb-3">Preferências do Pet</h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="especie" class="form-label">Espécie de Interesse</label>
                                <select class="form-select" id="especie" name="especie">
                                    <option value="qualquer">Qualquer</option>
                                    <option value="Cachorro">Cachorro</option>
                                    <option value="Gato">Gato</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="porte" class="form-label">Porte Preferido</label>
                                <select class="form-select" id="porte" name="porte">
                                    <option value="qualquer">Qualquer</option>
                                    <option value="Pequeno">Pequeno</option>
                                    <option value="Médio">Médio</option>
                                    <option value="Grande">Grande</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="caracteristicas" class="form-label">O que você procura em um pet? (Palavras-chave: brincalhão, calmo, filhote...)</label>
                            <textarea class="form-control" id="caracteristicas" name="caracteristicas" rows="3"></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Cadastrar Interesse</button>
                            <a href="/adocao" class="btn btn-outline-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
