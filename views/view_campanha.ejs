<%- include('partials/header') %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Navegação Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Campanhas</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= item.titulo %></li>
                </ol>
            </nav>

            <div class="card shadow-lg border-0 overflow-hidden">
                <% if (item.arquivo) { %>
                    <img src="/uploads/home/<%= item.arquivo %>" class="img-fluid w-100" style="max-height: 500px; object-fit: cover;" alt="<%= item.titulo %>">
                <% } %>
                
                <div class="card-body p-5">
                    <h1 class="card-title display-5 fw-bold mb-4"><%= item.titulo %></h1>
                    
                    <div class="card-text fs-5 text-secondary mb-4" style="white-space: pre-line;">
                        <%= item.mensagem || item.conteudo %>
                    </div>

                    <% if (item.link) { %>
                        <div class="mt-4 p-3 bg-light rounded border-start border-4 border-primary">
                            <h5 class="mb-2">Mais Informações</h5>
                            <a href="<%= item.link %>" target="_blank" class="btn btn-primary">
                                Acessar Link Externo <i class="fas fa-external-link-alt ms-1"></i>
                            </a>
                        </div>
                    <% } %>
                </div>

                <!-- Galeria de Fotos Adicionais -->
                <% if ((fotos && fotos.length > 0) || (typeof isAdmin !== 'undefined' && isAdmin)) { %>
                    <div class="card-body bg-light border-top p-5">
                        <h3 class="mb-4 text-secondary"><i class="fas fa-camera"></i> Galeria de Fotos</h3>
                        
                        <div class="row g-3">
                            <% if (fotos && fotos.length > 0) { %>
                                <% fotos.forEach(foto => { %>
                                    <div class="col-md-4 col-lg-3">
                                        <div class="card h-100 border-0 shadow-sm">
                                            <a href="/uploads/campanha/<%= foto.arquivo %>" target="_blank">
                                                <img src="/uploads/campanha/<%= foto.arquivo %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Foto da campanha">
                                            </a>
                                            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                                                <div class="card-footer bg-white text-center p-1">
                                                    <form action="/campanha/foto/delete/<%= foto.id %>" method="POST" onsubmit="return confirm('Excluir esta foto?');">
                                                        <button type="submit" class="btn btn-sm text-danger"><i class="fas fa-trash"></i> Excluir</button>
                                                    </form>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p class="text-muted">Nenhuma foto adicional cadastrada.</p>
                            <% } %>
                        </div>

                        <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                            <hr class="my-4">
                            <h5 class="mb-3">Adicionar Nova Foto</h5>
                            <form action="/campanha/<%= item.id %>/foto" method="POST" enctype="multipart/form-data" class="row g-3 align-items-end">
                                <div class="col-md-8">
                                    <label for="foto" class="form-label">Selecione a imagem</label>
                                    <input type="file" class="form-control" name="foto" id="foto" required>
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-success w-100"><i class="fas fa-upload"></i> Upload Foto</button>
                                </div>
                            </form>
                            <small class="text-muted">As fotos serão salvas na pasta: <strong><%= item.titulo.replace(/[^a-z0-9]/gi, '_').toLowerCase() %>_<%= new Date(item.origem).toISOString().split('T')[0] %></strong></small>
                        <% } %>
                    </div>
                <% } %>
                
                <div class="card-footer bg-white p-4 text-center border-top">
                    <a href="/" class="btn btn-outline-secondary me-2">Voltar para Campanhas</a>
                    <a href="/home" class="btn btn-outline-primary">Ir para Site Principal</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>