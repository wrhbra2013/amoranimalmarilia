<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novo Documento - Transparência</title>
    <link rel="stylesheet" href="/static/css/form_transparencia.css">
    <link rel="stylesheet" href="/static/css/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="form-container">
        <h2>Publicar Documento </h2>
        
        <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>
        <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>

        <form action="/transparencia/form" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="titulo">Título do Documento</label>
                <input type="text" id="titulo" name="titulo" 
                       placeholder="Ex: Balanço Patrimonial 2023"
                       value="<%= (typeof formData !== 'undefined' && formData.titulo) ? formData.titulo : '' %>">
            </div>

            <div class="form-group">
                <label for="tipo">Categoria *</label>
                <select id="tipo" name="tipo" required>
                    <option value="">Selecione...</option>
                    <% if (typeof types !== 'undefined') { %>
                        <% Object.keys(types).forEach(key => { %>
                            <option value="<%= key %>" <%= (typeof formData !== 'undefined' && formData.tipo === key) ? 'selected' : '' %>>
                                <%= types[key] %>
                            </option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <label for="ano">Ano de Referência *</label>
                <input type="number" id="ano" name="ano" required min="2000" max="<%= new Date().getFullYear() + 1 %>" 
                       value="<%= (typeof formData !== 'undefined' && formData.ano) ? formData.ano : new Date().getFullYear() %>">
            </div>

            <div class="form-group">
                <label for="descricao">Descrição (Opcional)</label>
                <textarea id="descricao" name="descricao" rows="3"><%= (typeof formData !== 'undefined' && formData.descricao) ? formData.descricao : '' %></textarea>
            </div>

            <div class="form-group">
                <label for="arquivo">Arquivo (PDF ou Imagem) *</label>
                <input type="file" id="arquivo" name="arquivo" required accept=".pdf,.jpg,.jpeg,.png">
                <small style="color: #666; display: block; margin-top: 5px; font-size: 0.9em;">Formatos aceitos: PDF, JPG, PNG. Tamanho máximo: 8MB.</small>
            </div>

            <button type="submit" class="btn-submit">Publicar</button>
        </form>
        
        <a href="/transparencia" class="cancel-link">Cancelar</a>
    </main>

    <%- include('partials/footer') %>

<script src="/static/js/form_transparencia.js"></script>
</body>
</html>