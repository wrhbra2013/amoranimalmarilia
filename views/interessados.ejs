<%- include("_header") -%>
<main class="container mt-4 mb-5">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-heart me-2"></i>Lista de Interessados em Adoção</h5>
            <a href="/admin" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-2"></i>Painel Admin</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Nome</th>
                            <th>Contato</th>
                            <th>WhatsApp</th>
                            <th>Espécie</th>
                            <th>Porte</th>
                            <th>Características</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof model !== 'undefined' && model.length > 0) { %>
                            <% model.forEach(item => { %>
                                <tr>
                                    <td><%= new Date(item.origem).toLocaleDateString('pt-BR') %></td>
                                    <td><%= item.nome %></td>
                                    <td><%= item.telefone %></td>
                                    <td><%= item.whatsapp %></td>
                                    <td><%= item.especie_desejada || 'N/A' %></td>
                                    <td><%= item.porte_desejado || 'N/A' %></td>
                                    <td><%= item.caracteristicas_desejadas || 'N/A' %></td>
                                    <td class="text-center">
                                        <form action="/interessados/delete/<%= item.id %>" method="POST" onsubmit="return confirm('Tem certeza que deseja remover este registro?');">
                                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash me-1"></i>Excluir</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center p-4 text-muted">Nenhum registro de interesse encontrado.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
<%- include("_footer") -%>
