<%- include("_header") -%>

<main class="main-content">
  <div class="container py-5">
    <% if (evento) { %>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <h3>Adicionar foto ao evento: <%= evento.titulo %></h3>

          <% if (typeof error_msg !== 'undefined' && error_msg.length) { %>
            <div class="alert alert-danger"><%= error_msg %></div>
          <% } %>
          <% if (typeof success_msg !== 'undefined' && success_msg.length) { %>
            <div class="alert alert-success"><%= success_msg %></div>
          <% } %>

          <form action="/eventos/<%= evento.id %>/foto" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="foto">Arquivo (imagem)</label>
              <input type="file" name="foto" id="foto" accept="image/*" required class="form-control">
            </div>
            <div class="form-group mt-2">
              <label for="descricao">Descrição (opcional)</label>
              <input type="text" name="descricao" id="descricao" class="form-control" placeholder="Breve descrição">
            </div>
            <div class="mt-3 d-flex justify-content-between">
              <a href="/eventos/<%= evento.id %>" class="button btn-secondary">Cancelar</a>
              <button type="submit" class="button">Enviar foto</button>
            </div>
          </form>
        </div>
      </div>
    <% } else { %>
      <p class="text-center text-muted">Evento não encontrado.</p>
    <% } %>
  </div>
</main>

<%- include("_footer") -%>
