<script>
    (function(){
        const carousel = document.getElementById('eventCarousel');
        if (!carousel) return;
        const slides = Array.from(carousel.querySelectorAll('.event-slide'));
        const prevBtn = document.getElementById('eventPrev');
        const nextBtn = document.getElementById('eventNext');
        const indicators = document.getElementById('eventIndicators');
        let idx = 0;
        let intervalId = null;
        const delay = 4000;

        function buildIndicators(){
            if(!indicators) return;
            indicators.innerHTML = '';
            slides.forEach((s,i)=>{
                const btn = document.createElement('button');
                btn.className = 'event-indicator';
                btn.setAttribute('aria-label', `Ir para evento ${i+1}`);
                btn.textContent = String(i+1);
                btn.addEventListener('click', ()=> { show(i); stopAutoplay(); });
                indicators.appendChild(btn);
            });
        }

        function show(n){
            if(!slides.length) return;
            idx = (n + slides.length) % slides.length;
            slides.forEach((s,i)=> s.style.display = i===idx ? 'block' : 'none');
            // update indicators (toggle active class)
            if(indicators){
                Array.from(indicators.children).forEach((d,i)=> d.classList.toggle('active', i===idx));
            }
        }

        function next(){ show(idx+1); }
        function prev(){ show(idx-1); }

        // autoplay controls
        function startAutoplay(){ if(intervalId) return; intervalId = setInterval(next, delay); }
        function stopAutoplay(){ if(intervalId){ clearInterval(intervalId); intervalId = null; } }

        buildIndicators(); show(0);

        prevBtn?.addEventListener('click', ()=>{ prev(); stopAutoplay(); });
        nextBtn?.addEventListener('click', ()=>{ next(); stopAutoplay(); });

        // Wheel navigation while hovering the carousel
        let lastWheel = 0;
        carousel.addEventListener('wheel', (e)=>{
            // only when hovering and small throttle
            const now = Date.now();
            if(now - lastWheel < 300) return e.preventDefault();
            lastWheel = now;
            if (e.deltaY > 0) { next(); } else { prev(); }
            e.preventDefault();
        }, { passive: false });

        // Pause on hover, resume when leaving (but only if in viewport)
        let inView = false;
        carousel.addEventListener('mouseenter', ()=> stopAutoplay());
        carousel.addEventListener('mouseleave', ()=> { if(inView) startAutoplay(); });

        // Start autoplay when section becomes visible (scroll into view)
        const target = document.getElementById('eventos') || carousel;
        const io = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if(entry.isIntersecting && entry.intersectionRatio > 0.4){
                    inView = true;
                    startAutoplay();
                } else {
                    inView = false;
                    stopAutoplay();
                }
            });
        }, { threshold: [0.25, 0.4, 0.75] });
        io.observe(target);

        // keyboard nav
        document.addEventListener('keydown', e=>{ if(document.activeElement && ['INPUT','TEXTAREA'].includes(document.activeElement.tagName)) return; if(e.key==='ArrowLeft') prev(); if(e.key==='ArrowRight') next(); });
    })();
</script>

<script>
    // Image load handling: fade-in loaded images and remove blur
    (function(){
        const imgs = document.querySelectorAll('.event-image');
        imgs.forEach(img => {
            if (img.complete) {
                img.classList.add('loaded');
                return;
            }
            img.addEventListener('load', ()=> img.classList.add('loaded'));
            img.addEventListener('error', ()=> img.classList.add('loaded'));
        });
    })();
</script>
