 <style>
     .login-container {
         min-height: 100vh;
         display: flex;
         align-items: center;
         justify-content: center;
         background: linear-gradient(135deg, var(--brand-teal), var(--brand-teal-2));
         padding: 20px;
         position: relative;
         overflow: hidden;
     }
     
     .login-container::before {
         content: '';
         position: absolute;
         top: -50%;
         right: -50%;
         width: 200%;
         height: 200%;
         background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
         animation: float 20s infinite linear;
     }
     
     @keyframes float {
         0% { transform: rotate(0deg); }
         100% { transform: rotate(360deg); }
     }
     
     .login-card {
         background: var(--container-bg);
         border-radius: 20px;
         box-shadow: 0 20px 60px rgba(0,0,0,0.3);
         overflow: hidden;
         width: 100%;
         max-width: 450px;
         position: relative;
         z-index: 1;
         border: 1px solid var(--border-color);
     }
     
     .login-header {
         background: linear-gradient(135deg, var(--brand-coral), var(--brand-coral-2));
         color: white;
         padding: 30px;
         text-align: center;
         position: relative;
     }
     
     .login-header::after {
         content: '';
         position: absolute;
         bottom: -2px;
         left: 0;
         right: 0;
         height: 4px;
         background: linear-gradient(90deg, var(--brand-teal), var(--brand-coral));
     }
     
     .login-header h1 {
         margin: 0;
         font-size: 1.8em;
         font-weight: 700;
         display: flex;
         align-items: center;
         justify-content: center;
         gap: 10px;
     }
     
     .login-header p {
         margin: 10px 0 0;
         opacity: 0.9;
         font-size: 0.95em;
     }
     
     .login-body {
         padding: 40px 30px;
     }
     
     .form-group-modern {
         margin-bottom: 25px;
         position: relative;
     }
     
     .form-label-modern {
         display: block;
         margin-bottom: 8px;
         font-weight: 600;
         color: var(--text-color);
         font-size: 0.95em;
     }
     
     .form-input-modern {
         width: 100%;
         padding: 15px 20px;
         border: 2px solid var(--border-color);
         border-radius: 12px;
         font-size: 1em;
         transition: all 0.3s ease;
         background: var(--input-bg);
         color: var(--text-color);
         box-sizing: border-box;
     }
     
     .form-input-modern:focus {
         outline: none;
         border-color: var(--brand-teal);
         box-shadow: 0 0 0 4px rgba(0, 128, 128, 0.1);
         transform: translateY(-2px);
     }
     
     .form-input-modern:invalid {
         border-color: var(--brand-coral);
     }
     
     .form-input-modern:valid {
         border-color: var(--brand-teal);
     }
     
     .input-icon {
         position: absolute;
         left: 15px;
         top: 50%;
         transform: translateY(-50%);
         color: var(--text-muted);
         font-size: 1.1em;
     }
     
     .form-input-with-icon {
         padding-left: 45px;
     }
     
     .password-toggle {
         position: absolute;
         right: 15px;
         top: 50%;
         transform: translateY(-50%);
         background: none;
         border: none;
         color: var(--text-muted);
         cursor: pointer;
         font-size: 1.1em;
         transition: color 0.3s ease;
         z-index: 2;
     }
     
     .password-toggle:hover {
         color: var(--brand-teal);
     }
     
     .checkbox-modern {
         display: flex;
         align-items: center;
         gap: 10px;
         margin-bottom: 25px;
     }
     
     .checkbox-input {
         width: 20px;
         height: 20px;
         accent-color: var(--brand-teal);
         cursor: pointer;
     }
     
     .checkbox-label {
         cursor: pointer;
         user-select: none;
         color: var(--text-color);
         font-size: 0.95em;
     }
     
     .login-button {
         width: 100%;
         padding: 18px;
         background: linear-gradient(135deg, var(--brand-coral), var(--brand-coral-2));
         color: white;
         border: none;
         border-radius: 12px;
         font-size: 1.1em;
         font-weight: 600;
         cursor: pointer;
         transition: all 0.3s ease;
         position: relative;
         overflow: hidden;
     }
     
     .login-button::before {
         content: '';
         position: absolute;
         top: 0;
         left: -100%;
         width: 100%;
         height: 100%;
         background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
         transition: left 0.5s ease;
     }
     
     .login-button:hover::before {
         left: 100%;
     }
     
     .login-button:hover {
         transform: translateY(-2px);
         box-shadow: 0 10px 25px rgba(220, 53, 69, 0.3);
     }
     
     .login-button:active {
         transform: translateY(0);
     }
     
     .alert-modern {
         padding: 15px 20px;
         border-radius: 12px;
         margin-bottom: 20px;
         border: none;
         display: flex;
         align-items: center;
         gap: 10px;
         animation: slideIn 0.3s ease;
     }
     
     @keyframes slideIn {
         from {
             opacity: 0;
             transform: translateY(-10px);
         }
         to {
             opacity: 1;
             transform: translateY(0);
         }
     }
     
     .alert-danger-modern {
         background: linear-gradient(135deg, #ff6b6b, #ee5a52);
         color: white;
     }
     
     .alert-success-modern {
         background: linear-gradient(135deg, var(--brand-teal), var(--brand-teal-2));
         color: white;
     }
     
     .back-link {
         position: absolute;
         top: 20px;
         left: 20px;
         display: flex;
         align-items: center;
         gap: 8px;
         color: white;
         text-decoration: none;
         padding: 10px 20px;
         background: rgba(255,255,255,0.2);
         border-radius: 25px;
         backdrop-filter: blur(10px);
         transition: all 0.3s ease;
         z-index: 2;
     }
     
     .back-link:hover {
         background: rgba(255,255,255,0.3);
         transform: translateX(-5px);
     }
     
     .login-footer {
         text-align: center;
         padding: 20px;
         background: var(--container-bg);
         border-top: 1px solid var(--border-color);
     }
     
     .login-footer p {
         margin: 0;
         color: var(--text-muted);
         font-size: 0.9em;
     }
     
     .help-links {
         display: flex;
         justify-content: center;
         gap: 20px;
         margin-top: 10px;
     }
     
     .help-link {
         color: var(--brand-teal);
         text-decoration: none;
         font-size: 0.9em;
         transition: color 0.3s ease;
     }
     
     .help-link:hover {
         color: var(--brand-coral);
         text-decoration: underline;
     }
     
     @media (max-width: 768px) {
         .login-card {
             max-width: 100%;
             margin: 20px;
         }
         
         .login-body {
             padding: 30px 20px;
         }
         
         .back-link {
             position: relative;
             top: auto;
             left: auto;
             margin-bottom: 20px;
             width: fit-content;
         }
     }
 </style>

 <div class="login-container">
     <a href="/" class="back-link">
         <i class="fas fa-arrow-left"></i>
         Voltar
     </a>
     
     <div class="login-card">
         <div class="login-header">
              <img src="/static/css/imagem/ong.jpg" alt="Logo ONG AMOR ANIMAL MARILIA" />
             <p>Acesso ao Sistema</p>
         </div>
         
         <div class="login-body">
             <% if (typeof error !== 'undefined' && error) { %>
                 <div class="alert-modern alert-danger-modern">
                     <i class="fas fa-exclamation-triangle"></i>
                     <%= error %>
                 </div>
             <% } %>
             
             <form action="/auth/login" method="post" id="loginForm">
                 <div class="form-group-modern">
                     <i class="fas fa-user input-icon"></i>
                     <input 
                         type="text" 
                         id="usuario" 
                         name="usuario" 
                         class="form-input-modern form-input-with-icon" 
                         placeholder="Digite seu usuário"
                         required
                         autocomplete="username"
                     >
                 </div>
                 
                 <div class="form-group-modern">
                     <i class="fas fa-lock input-icon"></i>
                     <input 
                         type="password" 
                         id="senha" 
                         name="senha" 
                         class="form-input-modern form-input-with-icon" 
                         placeholder="Digite sua senha"
                         required
                         autocomplete="current-password"
                     >
                     <button 
                         type="button" 
                         class="password-toggle" 
                         onclick="togglePasswordVisibility()"
                         title="Mostrar/Ocultar senha"
                     >
                         <i class="fas fa-eye" id="eyeIcon"></i>
                     </button>
                 </div>
                 
                 <div class="checkbox-modern">
                     <input type="checkbox" class="checkbox-input" id="manterConectado" name="manterConectado">
                     <label for="manterConectado" class="checkbox-label">Manter conectado</label>
                 </div>
                 
                 <button type="submit" class="login-button">
                     <i class="fas fa-sign-in-alt me-2"></i>
                     Entrar no Sistema
                 </button>
             </form>
         </div>
         
         <div class="login-footer">
             <p>Problemas para acessar?</p>
             <div class="help-links">
                 <a href="#" class="help-link" onclick="alert('Entre em contato com o administrador do sistema'); return false;">
                     <i class="fas fa-question-circle me-1"></i>
                     Ajuda
                 </a>
                 <a href="#" class="help-link" onclick="alert('Entre em contato com o administrador do sistema'); return false;">
                     <i class="fas fa-key me-1"></i>
                     Esqueci a senha
                 </a>
             </div>
         </div>
     </div>
 </div>

 <script>
 document.addEventListener('DOMContentLoaded', function() {
     const form = document.getElementById('loginForm');
     const usuarioInput = document.getElementById('usuario');
     const senhaInput = document.getElementById('senha');
     
     // Validação em tempo real
     function validateField(input) {
         if (input.value.trim() === '') {
             input.style.borderColor = 'var(--brand-coral)';
             return false;
         } else {
             input.style.borderColor = 'var(--brand-teal)';
             return true;
         }
     }
     
     usuarioInput.addEventListener('blur', () => validateField(usuarioInput));
     senhaInput.addEventListener('blur', () => validateField(senhaInput));
     
     // Validação no envio
     form.addEventListener('submit', function(e) {
         const isUsuarioValid = validateField(usuarioInput);
         const isSenhaValid = validateField(senhaInput);
         
         if (!isUsuarioValid || !isSenhaValid) {
             e.preventDefault();
             mostrarMensagem('Por favor, preencha todos os campos corretamente.', 'danger');
         }
     });
     
     // Foco automático no primeiro campo
     usuarioInput.focus();
 });
 
 function togglePasswordVisibility() {
     const senhaInput = document.getElementById('senha');
     const eyeIcon = document.getElementById('eyeIcon');
     
     if (senhaInput.type === 'password') {
         senhaInput.type = 'text';
         eyeIcon.className = 'fas fa-eye-slash';
     } else {
         senhaInput.type = 'password';
         eyeIcon.className = 'fas fa-eye';
     }
 }
 
 function mostrarMensagem(mensagem, tipo) {
     const alertDiv = document.createElement('div');
     alertDiv.className = `alert-modern alert-${tipo}-modern`;
     alertDiv.innerHTML = `
         <i class="fas ${tipo === 'danger' ? 'fa-exclamation-triangle' : 'fa-check-circle'}"></i>
         ${mensagem}
     `;
     
     const loginBody = document.querySelector('.login-body');
     loginBody.insertBefore(alertDiv, loginBody.firstChild);
     
     setTimeout(() => {
         alertDiv.remove();
     }, 5000);
 }
 </script>

