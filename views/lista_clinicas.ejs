<%- include("_header") -%>

<main class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-hospital me-2"></i>Clínicas Cadastradas</h1>
        <a href="/clinicas/form" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nova Clínica
        </a>
    </div>

    <% if (clinicas && clinicas.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Endereço</th>
                        <th>Telefone</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% clinicas.forEach(function(clinica) { %>
                        <tr>
                            <td><strong><%= clinica.nome %></strong></td>
                            <td><%= clinica.endereco || '-' %></td>
                            <td><%= clinica.telefone || '-' %></td>
                            <td>
                                <form action="/clinicas/delete/<%= clinica.id %>" method="POST" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir esta clínica?')">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Excluir Clínica">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Nenhuma clínica cadastrada.
        </div>
    <% } %>

    <div class="mt-3">
        <a href="/castracao" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>
    </div>
</main>

<%- include("_footer") -%>
