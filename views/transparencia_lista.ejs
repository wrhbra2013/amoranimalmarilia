<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %> - TransparÃªncia</title>
    <link rel="stylesheet" href="/static/css/transparencia_lista.css">
    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/imagem/bootstrap-icons.min.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="lista-container">
        <div class="header-flex">
            <h1><%= titulo %></h1>
            <a href="/transparencia" class="btn-voltar"><i class="bi bi-arrow-left"></i> Voltar</a>
        </div>

        <% if (docs.length === 0) { %>
            <div class="empty-msg">
                Nenhum documento encontrado nesta categoria.
            </div>
        <% } else { %>
            <% 
            let currentYear = null;
            docs.forEach(doc => { 
                if (doc.ano !== currentYear) {
                    currentYear = doc.ano;
            %>
                <h2 class="year-header"><i class="bi bi-calendar-event"></i> <%= currentYear %></h2>
            <% } %>
                <div class="doc-item">
                    <div class="doc-info">
                        <h3><%= doc.titulo %></h3>
                        <div class="doc-meta">
                            <% // compute file extension and formatted date %>
                            <% const ext = doc.arquivo ? doc.arquivo.split('.').pop().toUpperCase() : 'N/A'; %>
                            <% const formattedDate = doc.origem ? new Date(doc.origem).toLocaleDateString('pt-BR', { day: '2-digit', month: 'short', year: 'numeric' }) : (doc.ano || 'N/A'); %>
                            <div style="margin-bottom:6px;">
                                <span class="badge"><i class="bi bi-file-earmark"></i> <%= ext %></span>
                                <span class="badge"><i class="bi bi-calendar-event"></i> <%= formattedDate %></span>
                                <% if (doc.tipo) { %><span class="badge"><%= doc.tipo %></span><% } %>
                            </div>
                            <% if (doc.descricao) { %>
                                <p><%= doc.descricao %></p>
                            <% } %>
                        </div>
                    </div>
                    <div class="doc-actions">
                        <a href="/uploads/transparencia/<%= doc.arquivo %>" target="_blank" class="btn-view" aria-label="Visualizar <%= doc.titulo %>">
                            <i class="bi bi-eye-fill"></i> Visualizar
                        </a>
                        <a href="/uploads/transparencia/<%= doc.arquivo %>" download class="btn-view" style="background-color:var(--button-bg); color:var(--button-text);">
                            <i class="bi bi-download"></i> Baixar
                        </a>

                        <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                            <form action="/transparencia/delete/<%= doc.id %>/<%= doc.arquivo %>" method="POST" onsubmit="return confirm('Tem certeza que deseja excluir este documento?');" style="margin: 0;">
                                <button type="submit" class="btn-delete">
                                    <i class="bi bi-trash-fill"></i> Excluir
                                </button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div>

    <%- include('partials/footer') %>
</body>
</html>