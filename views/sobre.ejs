     <!-- Seção de Voluntários -->
     <section class="volunteers-section">
         <div class="volunteers-header">
             <h2>
                 <i class="fas fa-hands-helping"></i>
                 Nossos Voluntários
             </h2>
             <p>Conheça as pessoas que fazem essa obra acontecer todos os dias</p>
         </div>
         
         <div class="volunteers-carousel">
             <div class="volunteers-scroll-container" id="volunteersContainer">
                 <% if (typeof model !== 'undefined' && model.length > 0) { %>
                     <% model.forEach(voluntario => { %>
                         <div class="volunteer-card">
                             <div class="volunteer-avatar">
                                 <%= voluntario.nome.charAt(0).toUpperCase() %>
                             </div>
                             <h3 class="volunteer-name"><%= voluntario.nome %></h3>
                             <div class="volunteer-location">
                                 <i class="fas fa-map-marker-alt"></i>
                                 <%= voluntario.localidade %>
                             </div>
                             <div class="volunteer-skill">
                                 <strong>Habilidade:</strong> <%= voluntario.habilidade %>
                             </div>
                             <div class="volunteer-message">
                                 <%= voluntario.mensagem %>
                             </div>
                             <div class="volunteer-date">
                                 <i class="fas fa-calendar-alt me-1"></i>
                                 <%= new Date(voluntario.origem).toLocaleDateString('pt-BR') %>
                             </div>
                         </div>
                     <% }); %>
                 <% } else { %>
                     <div class="empty-volunteers">
                         <i class="fas fa-user-friends"></i>
                         <h3>Nenhum Voluntário Ainda</h3>
                         <p>Seja o primeiro a se juntar à nossa equipe!</p>
                     </div>
                 <% } %>
             </div>
             
             <% if (typeof model !== 'undefined' && model.length > 1) { %>
                 <button class="carousel-control prev" onclick="scrollVolunteers('prev')">
                     <i class="fas fa-chevron-left"></i>
                 </button>
                 <button class="carousel-control next" onclick="scrollVolunteers('next')">
                     <i class="fas fa-chevron-right"></i>
                 </button>
             <% } %>
         </div>
     </section>
     
     <!-- Seção de Call to Action -->
     <section class="cta-section">
         <div class="cta-content">
             <h2>Quer Fazer Parte da Causa PET?</h2>
             <p>Sua contribuição pode transformar vidas. Descubra como você pode ajudar!</p>
