 <%- include("_header")-%>
 
 <div class="container mt-4 mb-5">
 
     <!-- Header Section -->
     <div class="text-center mb-4">
         <h1><i class="fas fa-search-location me-2"></i>Anunciar PET Desaparecido</h1>
         <p class="lead">Preencha o formulário abaixo para anunciar o desaparecimento do seu pet. Quanto mais detalhes, melhor!</p>
     </div>
 
     <!-- Form Section -->
     <div class="card shadow-sm p-4">
         <form action="/procura_se/form" enctype="multipart/form-data" method="post" id="form-procura-se">
 
             <div class="mb-4">
                 <label for="arquivo" class="form-label fw-bold">Foto do Pet:*</label>
                 <!-- Image Preview Area -->
                 <div id="image-preview-container" class="text-center border rounded p-3 mb-2 bg-light d-flex align-items-center justify-content-center" style="min-height: 220px;">
                     <img id="frame" src="" alt="Pré-visualização da foto do pet" class="img-fluid rounded" style="display: none; object-fit: cover; max-height: 200px;"/> <!-- max-height para controle dentro do preview -->
                     <span id="preview-placeholder" class="text-muted">Nenhuma imagem selecionada</span>
                 </div>
                 <input type="file" name="arquivo" id="arquivo" class="form-control" accept="image/*" required/>
                 <div class="mt-2">
                     <button type="button" id="clear-image-button" class="btn btn-sm btn-outline-secondary">
                         <i class="fas fa-times me-1"></i>Limpar Seleção
                     </button>
                 </div>
             </div>
 
             <div class="row g-3 mb-3">
                 <div class="col-md-8">
                     <label for="nomePet" class="form-label fw-bold">Nome do Pet:*</label>
                     <input type="text" placeholder="Nome do Pet" name="nomePet" id="nomePet" class="form-control" required/>
                 </div>
                 <div class="col-md-4">
                     <label for="idadePet" class="form-label fw-bold">Idade (anos):</label>
                     <input type="number" placeholder="Ex: 2" name="idadePet" id="idadePet" class="form-control" min="0"/>
                 </div>
             </div>
 
             <div class="row g-3 mb-3">
                 <div class="col-md-6">
                     <label for="especie" class="form-label fw-bold">Espécie:*</label>
                     <select id="especie" name="especie" class="form-select" required>
                         <option value="" selected disabled>Selecione...</option>
                         <option value="canino">Canino</option>
                         <option value="felino">Felino</option>
                         <option value="outro">Outro</option>
                     </select>
                 </div>
                 <div class="col-md-6">
                     <label for="porte" class="form-label fw-bold">Porte:*</label>
                     <select id="porte" name="porte" class="form-select" required>
                         <option value="" selected disabled>Selecione...</option>
                         <option value="pequeno">Pequeno</option>
                         <option value="medio">Médio</option>
                         <option value="grande">Grande</option>
                     </select>
                 </div>
             </div>
 
             <div class="mb-3">
                 <label for="caracteristicas" class="form-label fw-bold">Características Distintivas:*</label>
                 <textarea id="caracteristicas" name="caracteristicas" rows="3" class="form-control" placeholder="Descreva cor, marcas, coleira (se usava), comportamento..." required></textarea>
             </div>
 
             <div class="mb-3">
                 <label for="local" class="form-label fw-bold">Local e Data do Desaparecimento:*</label>
                 <input type="text" placeholder="Ex: Próximo ao Parque Central, dia 10/05" id="local" name="local" class="form-control" required/>
             </div>
 
             <hr class="my-4">
 
             <h5 class="mb-3">Informações de Contato</h5>
 
             <div class="row g-3 mb-3">
                 <div class="col-md-6">
                     <label for="tutor" class="form-label fw-bold">Nome do Responsável:*</label>
                     <input type="text" placeholder="Seu nome completo" id="tutor" name="tutor" class="form-control" required/>
                 </div>
                 <div class="form-group">
                    <label for="phone">Telefone</label>
                    <input type="tel" name="contato" id="phone" class="form-control phone-input"
                    placeholder="Telefone com DDD (55) já é adicionado automaticamente"
                    required />
                    </div>
             </div>
 
             <div class="mb-4">
                 <label for="whatsapp" class="form-label fw-bold">Disponível no WhatsApp?</label>
                 <select name="whatsapp" id="whatsapp" class="form-select">
                     <option value="" selected>Não informado</option>
                     <option value="sim">Sim</option>
                     <option value="nao">Não</option>
                 </select>
             </div>
 
             <hr class="my-4">
 
             <div class="d-flex justify-content-between align-items-center">
                 <a href="/procura_se" class="btn btn-secondary"> <!-- Ajustado o href para /procura_se -->
                     <i class="fas fa-times me-1"></i>Cancelar
                 </a>
                 <button type="submit" class="btn btn-primary">
                     <i class="fas fa-bullhorn me-1"></i>Anunciar Desaparecimento
                 </button>
             </div>
             <small class="form-text text-muted mt-3 d-block">(*) Campos obrigatórios</small>
         </form>
     </div>
 </div>
 
 <div class="container text-center mt-3 mb-4"> <!-- Centralizando o botão de relatório -->
     <a href="/relatorio/procura_se" class="btn btn-info"> <!-- Mudado para btn-info para diferenciar -->
         <i class="fas fa-file-alt me-1"></i>Gerar Relatório de Desaparecidos
     </a>
 </div>
 
 
 
 <%- include("_footer")-%>
 