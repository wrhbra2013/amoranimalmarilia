 <link rel="stylesheet" href="/static/css/voluntario.css">
<%-include("_header")-%>

<div class="voluntarios-container">
     <!-- Header Principal -->
     <div class="page-header">
         <div class="header-content">
             <div class="header-title">
                 <h1>
                     <i class="fas fa-hands-helping"></i>
                     Volunt치rios
                 </h1>
                 <p>
                     <i class="fas fa-heart me-1"></i>
                     <%= typeof model !== 'undefined' && model.length ? model.length + ' volunt치rios cadastrados' : 'Nenhum volunt치rio cadastrado' %>
                 </p>
             </div>
             <div class="header-actions">
                 <a href="/doacao/voluntario/form" class="btn-modern btn-success-modern">
                     <i class="fas fa-plus-circle"></i>
                     Novo Volunt치rio
                 </a>
             </div>
         </div>
     </div>
     
     <!-- Se칞칚o de Busca e Filtros -->
     <% if (typeof model !== 'undefined' && model.length > 0) { %>
     <div class="search-section">
         <div class="search-grid">
             <input 
                 type="text" 
                 id="searchInput" 
                 class="search-input" 
                 placeholder="游댌 Buscar volunt치rios por nome, localidade ou habilidades..."
                 onkeyup="filterVolunteers()"
             >
             <select id="availabilityFilter" class="filter-select" onchange="filterVolunteers()">
                 <option value="">Todas Disponibilidades</option>
                 <option value="integral">Integral</option>
                 <option value="meia">Meio Per칤odo</option>
                 <option value="fimsemana">Fim de Semana</option>
                 <option value="eventual">Eventual</option>
             </select>
             <button class="btn-modern btn-primary-modern" onclick="resetFilters()">
                 <i class="fas fa-redo"></i>
                 Limpar
             </button>
         </div>
     </div>
     <% } %>
     
     <!-- Grid de Volunt치rios -->
     <% if (typeof model !== 'undefined' && model.length > 0) { %>
     <div class="voluntarios-grid" id="voluntariosGrid">
         <% for (const voluntario of model) { %>
         <div class="voluntario-card" data-nome="<%= voluntario.nome.toLowerCase() %>" data-localidade="<%= voluntario.localidade.toLowerCase() %>" data-disponibilidade="<%= voluntario.disponibilidade.toLowerCase() %>" data-habilidades="<%= voluntario.habilidade.toLowerCase() %>">
             <div class="card-header-modern">
                 <div class="voluntario-avatar">
                     <%= voluntario.nome.charAt(0).toUpperCase() %>
                 </div>
                 <h3 class="voluntario-nome"><%= voluntario.nome %></h3>
                 <p class="voluntario-localidade">
                     <i class="fas fa-map-marker-alt"></i>
                     <%= voluntario.localidade %>
                 </p>
             </div>
             
             <div class="card-body-modern">
                 <div class="info-grid">
                     <div class="info-item">
                         <div class="info-icon icon-phone">
                             <i class="fas fa-phone"></i>
                         </div>
                         <div class="info-content">
                             <div class="info-label">Telefone</div>
                             <div class="info-value"><%= voluntario.telefone %></div>
                         </div>
                     </div>
                     
                     <div class="info-item">
                         <div class="info-icon icon-whatsapp">
                             <i class="fab fa-whatsapp"></i>
                         </div>
                         <div class="info-content">
                             <div class="info-label">WhatsApp</div>
                             <div class="info-value">
                                 <a href="https://wa.me/55<%= voluntario.whatsapp.replace(/\D/g, '') %>" target="_blank" style="color: var(--brand-teal); text-decoration: none;">
                                     <%= voluntario.whatsapp %>
                                 </a>
                             </div>
                         </div>
                     </div>
                     
                     <div class="info-item">
                         <div class="info-icon icon-availability">
                             <i class="fas fa-calendar-check"></i>
                         </div>
                         <div class="info-content">
                             <div class="info-label">Disponibilidade</div>
                             <div class="info-value"><%= voluntario.disponibilidade %></div>
                         </div>
                     </div>
                     
                     <div class="info-item">
                         <div class="info-icon icon-skills">
                             <i class="fas fa-tools"></i>
                         </div>
                         <div class="info-content">
                             <div class="info-label">Habilidades</div>
                             <div class="info-value"><%= voluntario.habilidade %></div>
                         </div>
                     </div>
                     
                     <% if (voluntario.mensagem && voluntario.mensagem.trim() !== '') { %>
                     <div class="info-item">
                         <div class="info-icon icon-message">
                             <i class="fas fa-comment"></i>
                         </div>
                         <div class="info-content">
                             <div class="info-label">Mensagem</div>
                             <div class="info-value"><%= voluntario.mensagem %></div>
                         </div>
                     </div>
                     <% } %>
                 </div>
             </div>
             
             <div class="card-actions">
                 <a href="/doacao/voluntario/form/<%= voluntario.id %>" class="btn-action btn-edit">
                     <i class="bi bi-pencil"></i>
                     Editar
                 </a>
                 <button class="btn-action btn-delete" onclick="confirmDelete('<%= voluntario.id %>', '<%= voluntario.nome %>')">
                     <i class="bi bi-trash"></i>
                     Excluir
                 </button>
             </div>
         </div>
         <% } %>
     </div>
     <% } else { %>
     <!-- Estado Vazio -->
     <div class="empty-state">
         <div class="empty-icon">
             <i class="fas fa-user-friends"></i>
         </div>
         <h2 class="empty-title">Nenhum Volunt치rio Cadastrado</h2>
         <p class="empty-description">
             Seja o primeiro a se juntar  nossa equipe de volunt치rios e fazer a diferen칞a na vida de muitos animais!
         </p>
         <a href="/doacao/voluntario/form" class="btn-modern btn-success-modern" style="font-size: 1.1em; padding: 15px 30px;">
             <i class="fas fa-heart me-2"></i>
             Tornar-se Volunt치rio
         </a>
     </div>
     <% } %>
 </div>
 
 <!-- Bot칚o Flutuante para Mobile -->
 <button class="floating-button" onclick="window.location.href='/doacao/voluntario/form'" title="Adicionar Volunt치rio">
     <i class="fas fa-plus"></i>
  </button>

<script src="/static/js/voluntario.js"></script>

<%-include("_footer")-%>